<div>
  <h1>Book detail</h1>
  <table>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>pic</td><!--icon image & icon name入れる-->
        <td><%= book.title %></td><!--titleからshow画面にリンク-->
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>





<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>