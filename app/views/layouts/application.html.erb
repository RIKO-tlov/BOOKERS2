<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d flex-column vh-100">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3 text-white" href= "/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"></button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Home", current_user %>
              </li>
              <li class="nav-item">
                <%= link_to "Users", users_path %>
              </li>
              <li class="nav-item">
                <%= link_to "Books", books_path %>
              </li>
              <li class="nav-item">
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "Home", "/" %>
              </li>
              <li class="nav-item">
                <%= link_to "About", "" %>
              </li>
              <li class="nav-item">
                <%= link_to "sign up", new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "log in", new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="md-auto">

      <%= yield %>

    </main>

    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>
