<div class="profile-container">
  <h2>User info</h2>
  <div class="image"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></div>
  <table>
    <tbody>
      <strong>
      <tr>
        <th>name</th>
        <th><%= @user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </strong>
    </tbody>
  </table>
  <% if @user.id == current_user.id %>
    <p><%= link_to "awesomefont", edit_user_path(@user) %></p>
  <% end %>
</div>
<div>
  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td><!--titleからshow画面にリンク-->
        <td><%= link_to "Show", @book.user_id %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>