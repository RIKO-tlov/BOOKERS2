<div class="form-group">
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <% if @user.errors.any? %>
      <h2 class="text-danger">
        <%= @user.errors.count %>error prohibited this obj from being saved:
      </h2>
      <% @user.errors.full_messages.each do |message| %><br />
        <p class="text-danger "><%= message %></p>
      <% end %>
    <% end %>


    <div>
      <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
        <p class="mb-3"><label for="inputName">Name</label><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"name" %></p>
        <p class="mb-3"><label for="inputImage">Image</label><br />
        <%= f.attachment_field :profile_image, placeholder:"profileImage" %></p>
        <p class="mb-3" ><label for="inputIntroduction">introduction</label><br />
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction", placeholder:"introduction"%></p>
        <%= f.submit "Update User", class:"btn btn-lg btn-secondary btn-sm mt-3" %>
        <% end %>
    </div>
    </div>
  </div>
</div>
</div>
