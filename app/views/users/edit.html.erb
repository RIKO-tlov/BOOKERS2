<div class="form-group">
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
        <p class="mb-3"><label for="inputName">Name</label><br />
        <%= f.text_field :name, autofocus: true, placeholder:"name" %></p>
        <p class="mb-3"><label for="inputImage">Image</label><br />
        <%= f.attachment_field :profile_image, placeholder:"profileImage" %></p>
        <p class="mb-3" ><label for="inputIntroduction">introduction</label><br />
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></p>
        <%= f.submit 'update User' %>
        <% end %>
    </div>
  </div>
</div>
</div>
