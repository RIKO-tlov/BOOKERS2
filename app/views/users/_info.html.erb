    <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg", size:'70x70' %>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%= user.name %></th>
          </tr>
          <tr>
            <th scope="col">introduction</th>
            <th scope="col"><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="button mt-5">
        <% if user.id == current_user.id %>
          <%= link_to  edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block btn-sm' do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
          <% else %>
          <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block btn-sm' do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>